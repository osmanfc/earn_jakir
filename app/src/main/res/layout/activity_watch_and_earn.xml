                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:text="@string/watch_amp_earn"
                android:textColor="#e9316e"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>


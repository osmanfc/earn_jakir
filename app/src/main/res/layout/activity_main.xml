<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="0.25">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mainuddin ChistY"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/helpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/help_icon"/>

            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/view55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_card"
            android:elevation="10dp">

            <LinearLayout
                android:id="@+id/llll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/super_coin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_points_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20,0000"
                        android:gravity="center"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawablePadding="5dp"
                        app:drawableRightCompat="@drawable/pocket_coin_img"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#e7e7e7" />

                <LinearLayout
                    android:id="@+id/spin_wheel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/spin"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            app:srcCompat="@drawable/top_btn_1" />

                        <TextView
                            android:id="@+id/spinTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Spin"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/scratch_card_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/scratch"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            app:srcCompat="@drawable/top_btn_2" />

                        <TextView
                            android:id="@+id/scratchTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Scratch"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quiz_card_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/quiz"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            app:srcCompat="@drawable/top_btn_3" />

                        <TextView
                            android:id="@+id/quizTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Quiz"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/captcha_earn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/captcha"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            app:srcCompat="@drawable/top_btn_4" />

                        <TextView
                            android:id="@+id/captchaTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Captcha"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llll"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/promotion_heightggh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/daily_check_in_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_one"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/checkin"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:contentDescription="@string/spin_image"
                            android:src="@drawable/checked" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0059ff"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"

                            android:text="@string/daily_checkin"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/refer_and_earn_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_two"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/refer"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/refer"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/spin_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#e9316e"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"
                            android:text="@string/refer_and_win"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_three"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profile_icon"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/spin_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#00ae0d"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"
                            android:text="@string/profile"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rating_app_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_one"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/rate"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/rating"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/spin_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/watch_color1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"
                            android:text="@string/rate_us"/>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/nic2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:id="@+id/watch_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_two"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/watch_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:contentDescription="@string/spin_image"
                            android:src="@drawable/watch_icon1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#e9316e"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"
                            android:text="@string/watch_amp_earn"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/gameBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_three"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/gameimg"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/game_icon"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/spin_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#00ae0d"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"
                            android:text="@string/games"/>

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/banner_container2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent" />


                <LinearLayout
                    android:id="@+id/game_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/game_banner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/spin_image" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/promotion_height"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/promotion_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/spin_image" />

                    <ImageView
                        android:id="@+id/promotion_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/spin_image" />

                    <ImageView
                        android:id="@+id/promotion_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/captcha_image" />

                    <ImageView
                        android:id="@+id/promotion_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/captcha_image" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/reward_btn"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="8dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/redeem_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rewards"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true"
                        android:paddingStart="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Convert your coins"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:paddingStart="80dp"/>



                </RelativeLayout>


            </LinearLayout>


        </ScrollView>





    </LinearLayout>

</LinearLayout>